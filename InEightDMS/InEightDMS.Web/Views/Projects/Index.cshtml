@model IEnumerable<InEightDMS.Domain.Entities.Project>
@{
    ViewBag.Title = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Projects</h2>
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
            + Create Project
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No projects found. @if (User.IsInRole("Admin")) { <text>Create a new project to get started.</text> }
    </div>
}
else
{
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text text-muted">@(project.Description ?? "No description")</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Manager: @(project.Manager.Name)
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="@Url.Action("Index", "Documents", new { projectId = project.Id })" class="btn btn-sm btn-outline-primary">
                            View Documents
                        </a>
                        <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-sm btn-outline-secondary">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
