@model InEightDMS.Domain.Entities.Document
@{
    ViewBag.Title = "Document Details - " + Model.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Documents", new { projectId = Model.ProjectId })">@Model.Project.Name</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@Model.Name</h4>
                <span class="badge bg-@(Model.Status == InEightDMS.Domain.Entities.DocumentStatus.Approved ? "success" : Model.Status == InEightDMS.Domain.Entities.DocumentStatus.IFC ? "primary" : "warning")">
                    @Model.Status
                </span>
            </div>
            <div class="card-body">
                <h6 class="text-muted">Document Information</h6>
                <hr />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Type:</strong> @Model.Type
                    </div>
                    <div class="col-md-6">
                        <strong>Category:</strong> @(Model.Category ?? "N/A")
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Transmittal:</strong> @(Model.TransmittalNumber ?? "N/A")
                    </div>
                    <div class="col-md-6">
                        <strong>Version:</strong> @Model.Version.@Model.RevisionNumber
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Description:</strong>
                    <p class="text-muted">@(Model.Description ?? "No description provided.")</p>
                </div>
                <div class="mb-3">
                    <strong>Tags:</strong>
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        foreach (var tag in Model.Tags.Split(','))
                        {
                            <span class="badge bg-light text-dark">@tag.Trim()</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No tags</span>
                    }
                </div>
                
                <h6 class="text-muted mt-4">Upload Information</h6>
                <hr />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Uploaded By:</strong> @(Model.UploadedBy.Name)
                    </div>
                    <div class="col-md-6">
                        <strong>Uploaded At:</strong> @Model.UploadedAt.ToString("yyyy-MM-dd HH:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <!-- Linked Items -->
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Linked Items</h6>
                <a href="@Url.Action("AddLinkedItem", "Documents", new { id = Model.Id })" class="btn btn-sm btn-outline-primary">+ Add</a>
            </div>
            <ul class="list-group list-group-flush">
                @if (Model.LinkedItems != null && Model.LinkedItems.Any())
                {
                    foreach (var item in Model.LinkedItems)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-info">@item.ItemType</span>
                                @item.ItemNumber
                            </div>
                            <span class="badge bg-@(item.Status == InEightDMS.Domain.Entities.ItemStatus.Open ? "warning" : "success")">
                                @item.Status
                            </span>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No linked items</li>
                }
            </ul>
        </div>
        
        <!-- Actions Log -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Recent Actions</h6>
            </div>
            <ul class="list-group list-group-flush">
                @if (Model.Actions != null && Model.Actions.Any())
                {
                    foreach (var action in Model.Actions.OrderByDescending(a => a.ActionAt).Take(5))
                    {
                        <li class="list-group-item">
                            <small class="text-muted">@action.ActionAt.ToString("yyyy-MM-dd HH:mm")</small>
                            <br />
                            <strong>@action.Type</strong> by @(action.ActionBy.Name)
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No actions recorded</li>
                }
            </ul>
        </div>
    </div>
</div>
