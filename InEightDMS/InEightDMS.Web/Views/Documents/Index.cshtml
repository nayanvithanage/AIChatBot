@model IEnumerable<InEightDMS.Domain.Entities.Document>
@{
    ViewBag.Title = "Documents - " + ViewBag.ProjectName;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
        <li class="breadcrumb-item active">@ViewBag.ProjectName</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Documents</h2>
    <a href="@Url.Action("Create", "Documents", new { projectId = ViewBag.ProjectId })" class="btn btn-primary">
        + Upload Document
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No documents in this project. Upload a document to get started.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Uploaded By</th>
                    <th>Uploaded At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Documents", new { id = doc.Id })">
                                @doc.Name
                            </a>
                        </td>
                        <td><span class="badge bg-secondary">@doc.Type</span></td>
                        <td>
                            @switch (doc.Status)
                            {
                                case InEightDMS.Domain.Entities.DocumentStatus.Draft:
                                    <span class="badge bg-warning text-dark">Draft</span>
                                    break;
                                case InEightDMS.Domain.Entities.DocumentStatus.InReview:
                                    <span class="badge bg-info">In Review</span>
                                    break;
                                case InEightDMS.Domain.Entities.DocumentStatus.IFC:
                                    <span class="badge bg-primary">IFC</span>
                                    break;
                                case InEightDMS.Domain.Entities.DocumentStatus.Approved:
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@doc.Status</span>
                                    break;
                            }
                        </td>
                        <td>@(doc.UploadedBy.Name)</td>
                        <td>@doc.UploadedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="@Url.Action("Details", "Documents", new { id = doc.Id })" class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
